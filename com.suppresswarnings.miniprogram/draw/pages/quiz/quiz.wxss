.title {
  width: 100%;
  display: flex;
  justify-content: center; 
  color: #a6a6a6;
  font-size: 12px;
  border-bottom: 1px solid #e6e6e6;
}

.center{
  text-align: center;
  justify-content: center; 
  margin-top: 20px;
}

.quiz {
  margin: 5px 5px;
}

.options {
  display: block;
  background: white;
  width: 100%;
  border: 0;
  margin: 0;
  padding: 0;
  text-align: left;
}

.right {
  background: green;
}

.wrong {
  background: red;
}