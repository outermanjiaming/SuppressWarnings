.title {
  width: 100%;
  display: flex;
  justify-content: center; 
  color: #a6a6a6;
  font-size: 12px;
  border-bottom: 1px solid #e6e6e6;
}

.center{
  text-align: center;
  justify-content: center; 
  margin-top: 15px;
}

.quiz {
  margin: 5px 5px;
}

.options {
  display: block;
  background: white;
  width: 100%;
  border: 0;
  margin: 0;
  padding: 0;
  text-align: left;
}

.right {
  background: lightgreen;
}

.wrong {
  background: red;
}

.operation {
 position: fixed;
 padding: 0px;
 bottom: 0px;
 width: 100%;
 height: constant(safe-area-inset-bottom);
 background-color: #fff;
}

.explain {
  padding: 5px 5px;
}